{
    "name": "qbus/nginx-cache",
    "type": "typo3-cms-extension",
    "description": "NGINX Cache Manager for TYPO3",
    "keywords": [
        "TYPO3",
        "extension"
    ],
    "homepage": "https://www.qbus.de",
    "authors": [
        {
            "name": "Benjamin Franzke",
            "email": "bfr@qbus.de",
            "role": "Developer",
            "homepage": "https://www.qbus.de"
        }
    ],
    "license": "GPL-2.0+",
    "require": {
        "typo3/cms-core": "^7.6.13 || ^8.5.0 || ^9.5.0",
        "typo3/cms-frontend": "^7.6.13 || ^8.5.0 || ^9.5.0",
        "typo3/cms-backend": "^7.6.13 || ^8.5.0 || ^9.5.0",
        "typo3/cms-extbase": "^7.6.13 || ^8.5.0 || ^9.5.0"
    },
    "require-dev": {
        "helhum/typo3-console": "^4.0.1 || ^5.0",
        "qbus/cache-status": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Qbus\\NginxCache\\": "Classes"
        }
    },
    "replace": {
        "typo3-ter/nginx-cache": "self.version"
    },
    "config": {
        "vendor-dir": ".build/vendor",
        "bin-dir": ".build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .build/web/typo3conf/ext/",
            "[ -L .build/web/typo3conf/ext/nginx_cache ] || ln -snvf ../../../../. .build/web/typo3conf/ext/nginx_cache"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".build",
            "web-dir": ".build/web"
        },
        "helhum/typo3-console": {
           "install-extension-dummy": false
        }
    }
}
